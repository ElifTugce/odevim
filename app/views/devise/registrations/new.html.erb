<div class="container">
  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
     <div class="panel panel-default widget">
    	  <div class="panel-body">
    	   <h2 class="text-center">Hesap Oluştur</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          
          <div class="form-group">
    			<%= f.label :isminiz %><br />
    			<%= f.text_field :user_name, autofocus: true, class:"form-control",  placeholder:"isminiz" %>
    		  </div>
          
          <div class="form-group">
    			<%= f.label :email %><br />
    			<%= f.email_field :email, autofocus: true, class:"form-control",  placeholder:"parola doğrula" %>
    		  </div>
          
          <div class="form-group">
    			<%= f.label :parola_dogrula %><br />
    			<% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> karakter en az)</em>
          <% end %><br />
    			<%= f.password_field :password, autocomplete: "off", class:"form-control",  placeholder:"parola doğrula" %>
    		  </div>
          
    		  <div class="form-group">
    			<%= f.label :parola %><br />
    			<%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control",  placeholder:"parola doğrula" %>
    		  </div>
    		  
    		  <div class="form-group">
    		  <%= f.label :Resim %><br />
    			<%= f.file_field:image, class:"form-control" %>
    		  </div>
    		  
          <div class="actions">
            <%= f.submit "Hesap Oluştur" ,class:"btn btn-primary"%>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
    </div>
    <div class="col-sm-4"></div>
  </div>
</div>